	optional common.one_inscription_case inscription_case = 2;
}

message ntf_remove_inscription_case
{
	optional int32 inscription_case_index = 1[default = 0];
	optional int32 reason = 2[default = 0];
}

message req_use_inscription_case
{
	optional int32 inscription_case_index = 1[default = 0];
	optional int32 wujiang_index = 2[default = 0];
}

message rsp_use_inscription_case
{
	optional int32 result = 1[default = 0];
}

//神兵
message req_equip_shenbing
{
	optional int32 shenbing_index = 1[default = 0];
	optional int32 wujiang_index = 2[default = 0];
}

message rsp_equip_shenbing
{
	optional int32 result = 1[default = 0];
}

message req_unequip_shenbing
{
	optional int32 shenbing_index = 1[default = 0];
	optional int32 wujiang_index = 2[default = 0];
}

message rsp_unequip_shenbing
{
	optional int32 result = 1[default = 0];
} 

message req_shenbing_improve_stage
{
	optional int32 shenbing_index = 1[default = 0];
}

message rsp_shenbing_improve_stage
{
	optional int32 result = 1[default = 0];
} 

message req_shenbing_rebuild
{
	repeated int32 shenbing_index_list = 1;
	optional int32 shenbing_index = 2[default = 0];
}

message rsp_shenbing_rebuild
{
	optional int32 result = 1[default = 0];
	repeated int32 new_mingwen_list = 2;
}

message req_confirm_shenbing_rebuild
{
	optional int32 confirm = 1[default = 0];//0再想想,1保留原属性，2使用新属性
	optional int32 shenbing_index = 2[default = 0];
}

message rsp_confirm_shenbing_rebuild
{
	optional int32 result = 1[default = 0];
	optional int32 confirm = 2[default = 0];//0再想想,1保留原属性，2使用新属性
}

message ntf_shenbing_chg
{
	optional int32 reason = 1[default = 0];//STAGE_UP = 1,REMOVE = 2,CHG_EQUIP = 3,REBUILD = 4,New = 5,LOCK_OR_UNLOCK = 6,

	optional common.one_shenbing shenbing_info = 2;
}

message ntf_shenbing_remove
{
	optional int32 reason = 1[default = 0];//REMOVE = 2
	optional int32 remove_shenbing_index = 3[default = 0];
}

//坐骑
message ntf_horse_chg
{
	optional int32 reason = 1[default = 0];//STAGE_UP = 1,REMOVE = 2,CHG_EQUIP = 3,REBUILD = 4,New = 5,LOCK_OR_UNLOCK = 6,
	optional common.one_horse horse_info = 2;
}

message req_equip_horse
{
	optional int32 wujiang_index = 1[default = 0];
	optional int32 horse_index = 2[default = 0]; //0表示卸下指定武将的坐骑
}

message rsp_equip_horse
{
	optional int32 result = 1[default = 0];
	optional int32 wujiang_index = 2[default = 0];
	optional int32 horse_index = 3[default = 0]; //0表示卸下指定武将的坐骑
}

message req_horse_improve_stage
{
	optional int32 horse_index = 1[default = 0];
}

message rsp_horse_improve_stage
{
	optional int32 result = 1[default = 0];
	optional common.one_horse horse_info = 2;
}

message ntf_remove_horse
{
	optional int32 horse_index = 1[default = 0];
	optional int32 reason = 2[default = 0];
}

