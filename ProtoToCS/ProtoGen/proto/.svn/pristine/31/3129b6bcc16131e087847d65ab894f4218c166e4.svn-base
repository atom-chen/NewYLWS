package wujiang;
import "common.proto";


//武将
message req_wujiang_list
{
	
}

message rsp_wujiang_list
{	
	optional int32 result = 1[default = 0];
	repeated common.one_wujiang wujiang_list = 2;
}

message ntf_wujiang_chg
{
	optional int32 reason = 1[default = 0];//1突破
	optional common.one_wujiang wujiang_info = 2;
}

message ntf_remove_wujiang
{
	repeated int32 wujiang_index_list = 1;
	optional int32 reason = 2[default = 0];
}

message ntf_exp_chg
{
	message wujiang_exp_chg
	{
		optional int32 wujiang_index = 1[default = 0];
		optional int32 level = 2[default = 0];
		optional int32 exp = 3[default = 0];
	}

	repeated wujiang_exp_chg exp_chg_list = 1;
}

message req_wujiang_levelup
{
	optional int32 wujiang_index = 1[default = 0];
	repeated common.one_item cost_item_list = 2;
}

message rsp_wujiang_levelup
{
	optional int32 result = 1[default = 0];
}

message req_wujiang_star_levelup
{
	optional int32 wujiang_index = 1[default = 0];
	repeated int32 cost_wujiang_list = 2;
}

message rsp_wujiang_star_levelup
{
	optional int32 result = 1[default = 0];
}

message req_wujiang_merge
{
	optional int32 xinwu_id = 1[default = 0];
}

message rsp_wujiang_merge
{
	optional int32 result = 1[default = 0];
	repeated common.award_info award_list = 2;
}

message req_wujiang_skill_levelup
{
	optional int32 wujiang_index = 1[default = 0];
	repeated int32 cost_wujiang_list = 2;
}

message rsp_wujiang_skill_levelup
{
	optional int32 result = 1[default = 0];
	optional common.second_attr src_second_attr = 2;
	optional common.second_attr curr_second_attr = 3;
}

message req_wujiang_power_rank
{
	optional int32 wujiang_id = 1[default = 0];
}

message rsp_wujiang_power_rank
{
	optional int32 result = 1[default = 0];
	repeated common.one_ranking ranking_list = 2;
}

message req_lock
{
	optional int32 wujiang_index = 1[default = 0];
	optional int32 lock = 2[default = 0];//1:locked, 0:unlock 
}

message rsp_lock
{
	optional int32 result = 1[default = 0];
	optional int32 wujiang_index = 2[default = 0];
	optional int32 lock = 3[default = 0];//1:locked, 0:unlock 
}

message req_wujiang_second_attr_info
{
	optional int32 wujiang_index = 1[default = 0];
}

message rsp_wujiang_second_attr_info
{
	optional int32 result = 1[default = 0];
	optional common.second_attr base_second_attr = 2;
	optional common.second_attr extra_second_attr = 3;
}

//亲密度
message req_intimacy_list 
{
	
}

message rsp_intimacy_list
{
	optional int32 result = 1[default = 0];
	repeated common.one_intimacy intimacy_list = 2;
}

message req_improve_intimacy
{
	optional int32 src_wujiang_id = 1[default = 0];
	optional int32 dst_wujiang_id = 2[default = 0];
	optional int32 item_id = 3[default = 0];
}

message rsp_improve_intimacy
{
	optional int32 result = 1[default = 0];
}

message ntf_intimacy_chg
{
	optional int32 reason = 1[default = 0];//1:失去 2:新增 3:升級 4经验变化 0:编辑
	optional common.one_intimacy intimacy_info = 2;
}

//命签
message req_equip_inscription
{
	optional int32 wujiang_index = 1[default = 0];
	repeated int32 inscription_id_list = 2;
}

message rsp_equip_inscription
{
	optional int32 result = 1[default = 0];
}

message req_inscription_merge
{
	optional int32 inscription_id = 1[default = 0];
}

message rsp_inscription_merge
{
	optional int32 result = 1[default = 0];
	optional int32 new_inscription_id = 2[default = 0];
}

message req_inscription_auto_merge
{
	repeated int32 type_list = 1;
	repeated int32 stage_list = 2;
}

message rsp_inscription_auto_merge
{
	optional int32 result = 1[default = 0];
	repeated common.one_item inscription_list = 2;
}

message req_inscription_case_list 
{
	
}

message rsp_inscription_case_list
{
	optional int32 result = 1[default = 0];
	repeated common.one_inscription_case inscription_case_list = 2;
}

message req_add_inscription_case
{
	repeated int32 inscription_list = 1;
	optional string case_name = 2[default = ""];
}

message rsp_add_inscription_case
{
	optional int32 result = 1[default = 0];
}

message req_save_inscription_case
{
	optional string inscription_case_index = 1;
	optional string case_name = 2[default = ""];
	repeated int32 inscription_list = 3;
}

message rsp_save_inscription_case
{
	optional int32 result = 1[default = 0];
}

message req_delete_inscription_case
{
	optional int32 inscription_case_index = 1[default = 0];
}

message rsp_delete_inscription_case
{
