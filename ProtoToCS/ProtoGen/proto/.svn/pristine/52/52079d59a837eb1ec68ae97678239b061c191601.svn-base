package buzhen;

import "common.proto";

message req_arrange_buzhen
{
	optional int32 buzhen_id = 1[default = 1];
	optional common.one_buzhen buzhen_info = 2;
}

message rsp_arrange_buzhen
{
	optional int32 result = 1[default = 0];
}

message req_all_buzhen_list
{

}

message rsp_all_buzhen_list
{
	optional int32 result = 1[default = 0];
	repeated common.one_buzhen buzhen_list = 2;
}

message ntf_all_buzhen_list
{
	repeated common.one_buzhen buzhen_list = 1;
}

message ntf_update_one_buzhen_info
{
	optional common.one_buzhen buzhen_info = 1;
}

message req_buzhen_illegal
{
	optional int32 buzhen_id = 1[default = 0];
}

message rsp_buzhen_illegal
{
	optional int32 result = 1[default = 0];
	optional int32 illegal = 2[default = 0]; //0合法; 34:没有总雇佣次数了 35已经雇佣3次了 281雇佣武将不存在
	optional int32 buzhen_id = 3[default = 0];
	optional uint32 hire_owner_id = 4[default = 0];
	optional int32 index = 5[default = 0];
}